<%= form_with(model: event, local: true) do |form| %>
  <% if event.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(event.errors.count, "error") %> prohibited this event from being saved:</h2>

      <ul>
      <% event.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <div class="control">
      Name : <%= form.text_field :event_name %>
      Date : <%= form.date_field :event_date %>
      Location : <%= form.text_field :event_location %>
    </div>
  </div>

  <div class="actions">
    <%= form.submit "Save Event", class:"button" %>
  </div>
<% end %>
